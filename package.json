{
  "name": "@learnersguild/los-sentiment-extension",
  "version": "0.1.0",
  "description": "LOS Sentiment",
  "scripts": {
    "build": "./node_modules/.bin/cross-env NODE_ENV=production ./node_modules/.bin/webpack --config ./config/webpack.js",
    "lint": "./node_modules/.bin/xo",
    "test:run": "./node_modules/.bin/cross-env NODE_ENV=test ./node_modules/.bin/babel-tape-runner '**/__tests__/*.test.js' | ./node_modules/.bin/faucet",
    "test": "npm run lint && npm run test:run"
  },
  "keywords": [
    "code sentiment",
    "chrome extension"
  ],
  "author": "Jeffrey Wescott <jeffrey@learnersguild.org>",
  "license": "UNLICENSED",
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "babel-cli": "^6.11.4",
    "babel-loader": "^6.2.5",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-2": "^6.13.0",
    "css-loader": "^0.23.1",
    "eslint-config-xo-react": "^0.9.0",
    "eslint-plugin-react": "^6.1.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "node-sass": "^3.8.0",
    "normalize.css": "^4.2.0",
    "optimize-css-assets-webpack-plugin": "^1.3.0",
    "postcss-loader": "^0.10.1",
    "react": "^15.3.1",
    "react-addons-css-transition-group": "^15.3.1",
    "react-addons-update": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-redux": "^4.4.5",
    "react-toolbox": "^1.1.2",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2",
    "xo": "^0.16.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2",
      "react"
    ]
  },
  "xo": {
    "extends": "xo-react",
    "ignore": [
      "lib/**/*"
    ],
    "rules": {
      "comma-dangle": [
        0
      ],
      "no-negated-condition": [
        0
      ],
      "quotes": [
        2,
        "single",
        "avoid-escape"
      ],
      "xo/filename-case": [
        0
      ]
    },
    "esnext": true,
    "space": true,
    "semicolon": false
  }
}
